{
    "name": "react-polaris-web-components",
    "version": "0.1.0",
    "description": "React wrappers for Shopify Polaris Web Components",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "lint": "eslint .",
        "format": "prettier --write .",
        "typecheck": "tsc --noEmit",
        "prepublishOnly": "npm run build"
    },
    "peerDependencies": {
        "react": "^18.0.0 || ^19.0.0",
        "react-dom": "^18.0.0 || ^19.0.0"
    },
    "dependencies": {
        "@shopify/polaris-types": "^1.0.1"
    },
    "devDependencies": {
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "eslint": "^9",
        "eslint-config-prettier": "^10.1.8",
        "prettier": "^3.8.1",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "tsup": "^8.0.0",
        "typescript": "^5",
        "typescript-eslint": "^8.53.1"
    },
    "keywords": [
        "react",
        "shopify",
        "polaris",
        "web-components",
        "ui"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/jaqito/react-polaris-web-components"
    }
}
